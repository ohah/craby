{
  "name": "{{ pkg_name }}",
  "version": "0.1.0",
  "description": "{{ description }}",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "build": "craby build && tsdown"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "author": "{{ author_name }} <{{ author_email }}>",
  "license": "MIT",
  "bugs": {
    "url": "{{ repository_url }}/issues"
  },
  "homepage": "{{ repository_url }}#readme",
  "dependencies": {
    "craby-modules": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/react": "^19.0.0",
    "crabygen": "*",
    "del-cli": "^7.0.0",
    "react": "19.1.1",
    "react-native": "0.81.4",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  }
}

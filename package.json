{
  "name": "craby",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "yarn workspaces foreach --all --topological-dev --exclude craby-0.80 run build",
    "lint:all": "biome check",
    "lint:fix": "biome check --write",
    "e2e:android": "MAESTRO_APP_ID=com.craby80 maestro test .maestro",
    "e2e:ios": "MAESTRO_APP_ID=org.reactjs.native.example.Craby80 maestro test .maestro",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^22",
    "mermaid": "^11.12.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "zx": "^8.8.4"
  },
  "resolutions": {
    "rollup": "npm:@rollup/wasm-node@4.46.2"
  },
  "packageManager": "yarn@4.10.3"
}

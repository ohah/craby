    craby::crabytest::CxxCrabyTestModule::kModuleName,
    [](std::shared_ptr<facebook::react::CallInvoker> jsInvoker) {
      return std::make_shared<craby::crabytest::CxxCrabyTestModule>(jsInvoker);
    });
